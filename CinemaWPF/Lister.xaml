<Window x:Class="CinemaWPF.Lister"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Lister" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="datagrid" Margin="5,5,5,39" MouseDoubleClick="datagrid_MouseDoubleClick"/>
       
        <Button Content="add new" HorizontalAlignment="Left" Margin="10,0,0,10" Width="75" Height="22" VerticalAlignment="Bottom" Click="Button_Add"/>
        <Button Content="close" Margin="0,0,10,10" Height="22" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="75" Click="Button_Close"/>

    </Grid>
</Window>
