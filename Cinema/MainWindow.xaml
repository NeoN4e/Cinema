<Window x:Class="Cinema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid Background="#FF1F8B0E">
        <TreeView x:Name="FilmsView" HorizontalAlignment="Left" Width="197" Margin="5,5,0,37" SelectedItemChanged="FilmsView_SelectedItemChanged" MouseDoubleClick="FilmsView_MouseDoubleClick">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate ItemsSource="{Binding Path=Sessions}">
                    <TextBlock Text="{Binding Path=Name}"/>

                    <HierarchicalDataTemplate.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Path=Date}"></TextBlock>
                        </DataTemplate>
                    </HierarchicalDataTemplate.ItemTemplate>

                </HierarchicalDataTemplate>

            </TreeView.ItemTemplate>
        </TreeView>
        <Button Content="new Film" HorizontalAlignment="Left" Margin="5,0,0,5" Width="75" Click="Button_Click" Height="27" VerticalAlignment="Bottom"/>
        <Grid x:Name="InfoGrid" Margin="207,5,10,10"/>
    </Grid>
</Window>
